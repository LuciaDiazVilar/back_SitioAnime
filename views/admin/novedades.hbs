<div class="cotainer" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end"> Bienvenidos! <a class="btn btn-danger" href="/admin/login"> Cerrar sesión <i
                    class="fas fa-sing-out-alt"></i></a></p>

    </div>
    <div class="row">
        <div class="col-7">
            <h3>Últimas novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/novedades/agregar"><i class="fa fa-plus" aria-hidden="true"></i>
                Nuevo</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thread>
                    <tr class="table-secondary">
                        <th scope="col">ID</th>
                        <th scope="col">Título</th>
                        <th scope="col">Imagenes</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thread>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-secondary" href="/admin/novedades/modificar/{{id}}"><i
                                    class="fa fa-pencil" aria-hidden="true"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                                    class="fa fa-trash" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>